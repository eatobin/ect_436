source 'https://rubygems.org'
ruby '2.0.0'

gem 'rails', '4.0.1'
gem 'sass-rails'
gem 'uglifier'
gem 'coffee-rails'
gem 'jquery-rails'
gem 'turbolinks'
gem 'jbuilder'
gem 'execjs'
gem 'pg'

group :doc do
  gem 'sdoc', require: false
end

group :development, :test do
  gem 'rspec-rails'
  gem 'spork-rails', github: 'sporkrb/spork-rails'
  gem 'childprocess'
end

group :test do
  gem 'selenium-webdriver'
  gem 'capybara'
end

group :production do
  gem 'rails_12factor'
end
