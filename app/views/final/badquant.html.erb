<head>
  <style>
    span.red {
      color: red;
    }

    td {
      text-align: center;
      padding: 15px;
    }
  </style>
</head>
<% provide(:title, 'BadQuant') %>
<table border="1" bordercolor="#ffffff" align="center" cellpadding="10" cellspacing="0"
       style="background-color:#B3E7FF; width: 960px; height: 300px;">
  <tr>
    <td>
      <div align="center"><%= image_tag("main-banner.gif") %></div>
    </td>
  </tr>
  <tr>
    <td>
      <h4 align="center"> Sorry, but you have requested more items than we have
        in stock.<br/>
        <br/>
        Please purchase fewer items. Thanks! </h4></td>
  </tr>
  <tr>
    <td>
      <%= form_tag(proddetail_path, {:method => "get"}) do %>
        <div align="center">
          <%= hidden_field_tag :pid, params[:pid] %>
          <%= submit_tag("Return To Item") %>
        </div>
      <% end %>
    </td>
  </tr>
  <tr>
    <td>
      <div align="center"><%= image_tag "bottom-banner.gif" %></div>
    </td>
  </tr>
</table>
